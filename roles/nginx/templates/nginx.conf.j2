worker_processes 1;

events {
	worker_connections 1024;	
}



http {

        include /etc/nginx/conf.d/*.conf;
	include /etc/nginx/sites-enabled/*;
	include mime.types;


        
        server {
                server_name localhost;
                listen 80;        
                root {{ nginx_custom_directory }};
                index index.html;

                location / {
                        try_files $uri $uri/ =404;
                }

        }

}



